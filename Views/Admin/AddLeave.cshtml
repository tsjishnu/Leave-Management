@model Leave_Management.Models.Leave

@{
    ViewBag.Title = "AddLeave";
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <style>
        /* Custom styles for the add leave page */
        body {
            margin: 0;
            padding-top: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 493px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 140px;
            margin-left: 465px;
        }

        /* Custom CSS to change the navbar color and make it fit the screen width */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }

        .btn-primary {
            background-color: #1b6ec2;
            border-color: rgba(25, 158, 225, 0.9);
            color: #f8f9fa;
            font-weight: bold;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-left: 148px;
            width: 99px;
        }

            .btn-primary:hover {
                background-color: #1b9fe1;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="form-container">
        <div class="Container">
            <h2>Add Leave</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Type)
                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Type)
                </div>

                <div class="form-group">
                    @Html.Label("Maximum Number of Leaves Permitted for Teaching Staff")
                    @Html.TextBoxFor(model => model.MaxDayTS, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaxDayTS)
                </div>

                <div class="form-group">
                    @Html.Label("Maximum Number of Leaves Permitted for Non-Teaching Staff")
                    @Html.TextBoxFor(model => model.MaxDayNTS, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaxDayTS)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "4" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
    <footer class="footer">
        <p>Leave Management System &copy; 2023. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
