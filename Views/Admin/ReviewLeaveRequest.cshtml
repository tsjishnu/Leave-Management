@model IEnumerable<Leave_Management.Models.LeaveRequest>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Review Leave Request</title>

    <style>
        /* Custom styles for the review leave request page */
        body {
            margin: 0;
            padding-top: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        /* Custom styles for the form container */
        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 800px;
            margin: 50px auto;
        }

        /* Custom CSS to change the navbar color and make it fit the screen width */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }

        /* Styling for the leave history table */
        .leave-history-table {
            width: 100%;
        }

            .leave-history-table th {
                background-color: #1b6ec2;
                color: #fff;
            }

            .leave-history-table td {
                border-bottom: 1px solid #ccc;
            }

        /* Styling for the back button */
        .back-button {
            background-color: #1b6ec2;
            border-color: #1b6ec2;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            width: 100%; /* Set a fixed width for the button */
            height: 60px; /* Set a fixed height for the button */
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }

            .back-button:hover {
                background-color: #1b9fe1; /* Change the hover background color to match navbar */
            }

        /* Styling for the Approve and Reject buttons in the table */
        .btn-primary {
            background-color: #1b6ec2; /* Change the background color to match navbar */
            border-color: #1b6ec2; /* Change the border color to match navbar */
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .btn-danger {
            width: 83px;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #1b9fe1; /* Change the hover background color to match navbar */
            }
        h2 {
            margin-top: 140px;
            text-align: center;
            color: #1b6ec2;
        }
 

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h2>Requested Leaves</h2>

            <table class="table leave-history-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Category</th>
                        <th>From Date</th>
                        <th>To Date</th>
                        <th>Reason</th>
                        <th>Remarks</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leaveRequest in Model)
                    {
                        <tr>
                            <td>@leaveRequest.Email</td>
                            <td>@leaveRequest.Type</td>
                            <td>@leaveRequest.FromDate.ToString("yyyy-MM-dd")</td>
                            <td>@leaveRequest.ToDate.ToString("yyyy-MM-dd")</td>
                            <td>@leaveRequest.Reason</td>
                            <td>@leaveRequest.Remarks</td>
                            <td>@leaveRequest.Status</td>
                            <td>
                                <div class="d-flex">
                                    @Html.ActionLink("Approve", "ApproveLeaveRequest", new { leaveRequestId = leaveRequest.Id }, new { @class = "btn btn-primary me-2" })
                                    @Html.ActionLink("Reject", "RejectLeaveRequest", new { leaveRequestId = leaveRequest.Id }, new { @class = "btn btn-danger" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

    </div>

    <footer class="footer">
        <p>Leave Management System &copy; 2023. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
