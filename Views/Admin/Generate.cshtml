@model Leave_Management.Models.DateSelectionModel

@{
    ViewBag.Title = "Generate Report";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    <style>
        body {
            margin: 0;
            padding-top: 30px;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        h2 {
            padding-top: 50px;
            color: #1b6ec2;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 350px;
            margin-left: auto;
            margin-right: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="date"] {
            width: 100%;
            height: 40px;
            border-radius: 5px;
            border: 2px solid #1b6ec2;
            padding: 8px;
            margin-bottom: 10px;
        }

        button {
            width: 100%;
            max-width: 260px;
            background-color: #1b6ec2;
            border-color: #1b6ec2;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #1b9fe1;
            }

        /* Custom styles for the navbar */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom styles for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h2 class="text-center">Date Selection</h2>

        <div class="form-container">
            @using (Html.BeginForm("Generate", "Admin", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate, "Select Start Date:")
                    @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate, "Select End Date:")
                    @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                </div>

                <button type="submit" class="btn btn-primary">Generate Report</button>
            }
        </div>
    </div>

    <footer class="footer">
        <p>Leave Management System &copy; @DateTime.Now.Year. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
