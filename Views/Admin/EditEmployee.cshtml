@model Leave_Management.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Edit Employee</title>
    <style>
        /* Custom styles for the edit employee page */
        body {
            margin: 0;
            padding-top: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 349px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 140px;
        }

        /* Custom CSS to change the navbar color and make it fit the screen width */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }

        .btn-primary {
            background-color: #1b6ec2;
            border-color: #1b9fe1;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        [type=button] {
            cursor: pointer;
            margin-left: 46PX;
            MARGIN-TOP: 29PX;
        }
        .btn-secondary{
            margin-top:25px;     

        }
        .btn-primary:hover {
            background-color: #1b6ec1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="form-container">
            <h2>Edit Employee</h2>
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FullName, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>

                <div class="form-group">
                    @Html.Label("Category", new { @class = "form-label" })
                    <div>
                        <label class="radio-label">
                            @Html.RadioButtonFor(model => model.Category, "TeachingStaff") Teaching Staff
                        </label>
                        <label class="radio-label">
                            @Html.RadioButtonFor(model => model.Category, "NonTeachingStaff") Non-Teaching Staff
                        </label>
                    </div>
                    @Html.ValidationMessageFor(model => model.Category)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.JoiningDate, new { @class = "form-label" })
                    @Html.EditorFor(model => model.JoiningDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.JoiningDate)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateofBirth, new { @class = "form-label" })
                    @Html.EditorFor(model => model.DateofBirth, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.DateofBirth)
                </div>

                <!-- Add other fields you want to edit here -->

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="@Url.Action("ManageEmployee", "Admin")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>

    <footer class="footer">
        <p>Leave Management System &copy; 2023. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
