@model Leave_Management.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - Employee Leave Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .forgot-password-link
        {
            text-align:center;
        }
        .login-container {
            margin-top: 50px;
            max-width: 400px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }

        .login-title {
            color: #1b6ec2;
            margin-bottom: 30px;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left; /* Move text boxes to the right */
        }

        .form-label {
            font-weight: bold;
            margin-left: 30px;
        }

        .narrow-textbox {
            width: 100%;
            max-width: 300px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
            margin-left: 30px;
        }

        .login-button {
            width: 100%;
            max-width: 300px;
            padding: 10px;
            background-color: #1b6ec2;
            border: none;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .login-button:hover {
                background-color: #135994;
            }

        .signup-link {
            text-align: center;
            margin-top: 20px;
        }

            .signup-link a {
                color: #1b6ec2;
                font-weight: bold;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .signup-link a:hover {
                    color: #135994;
                }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            color: #6c757d;
            font-size: 14px;
        }

        /* Custom styles for the college name */
        .college-name {
            font-size: 36px;
            font-weight: bold;
            color: #1b6ec2;
            text-align: center;
            margin-top: 10px;
        }

        .college-subtitle {
            font-size: 18px;
            color: #6c757d;
            text-align: center;
            margin-top: 5px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
            display: block;
            margin: 0 auto;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <!-- College logo -->
    <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

    <div class="container">
        <div class="college-name">School of Computer Applications</div>
        <div class="college-subtitle">Union Christian College, Aluva</div>
    </div>

    <div class="login-container">
        <h2 class="login-title">Employee Login</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                <div>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control narrow-textbox" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                <div>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control narrow-textbox" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <button type="submit" class="login-button">Login</button>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }
    </div>

    <div class="signup-link">
        Are you a new Employee? <a href="@Url.Action("Signup", "Account")">Click Here to Signup</a>
    </div>

    <div class="forgot-password-link">
        <a href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>
    </div>

    <div class="footer">
        Leave Management System &copy; 2023. All rights reserved. | Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
