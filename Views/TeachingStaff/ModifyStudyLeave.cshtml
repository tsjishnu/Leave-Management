@model Leave_Management.Models.LeaveRequest

@{
    ViewBag.Title = "Modify Study Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify Study Leave</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles for the modify study leave page */
        body {
            margin: 0;
            padding-top: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        h2 {
            padding-top: 100px;
            color: #1b6ec2;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 349px;
            margin-left: auto;
            margin-right: auto;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="date"],
        textarea {
            width: 100%;
            border-radius: 5px;
            border: 2px solid #1b6ec2;
            padding: 8px;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: r#1b6ec2;
            border-color: #1b6ec2;
            color: #fff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #1b9fe1;
            }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 5px;
        }

        /* Custom CSS to change the navbar color and make it fit the screen width */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h2 class="my-4">Modify Study Leave</h2>

        <div class="form-container">
            @using (Html.BeginForm("ModifyStudyLeave", "TeachingStaff", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.FromDate, new { @class = "control-label" })
                    @Html.EditorFor(m => m.FromDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.FromDate)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ToDate, new { @class = "control-label" })
                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.ToDate)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(model => model.Remarks)
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            }
        </div>
    </div>

    <footer class="footer">
        <p>Leave Management System &copy; 2023. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
