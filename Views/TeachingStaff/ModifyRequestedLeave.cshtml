@model List<Leave_Management.Models.LeaveRequest>

@{
    ViewBag.Title = "Modify Requested Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify Requested Leave</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles for the modify requested leave page */
        body {
            margin: 0;
            padding-top: 0;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: center;
            min-height: 100vh;
        }

        h2 {
            padding-top: 100px;
            color: #1b6ec2;
        }

        .table {
            width: 80%;
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
        }

            .table th {
                text-align: center;
                background-color: #1b6ec2;
            }

            .table td {
                text-align: center;
            }

        .btn-primary {
            background-color: #1b6ec2;
            border-color: #1b6ec2;
            color: #fff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #1b9fe1;
            }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 5px;
        }

        /* Custom CSS to change the navbar color and make it fit the screen width */
        .navbar {
            margin: 0;
            background-color: #1b6ec2;
            width: 100%;
        }

        /* Custom CSS for the footer */
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }

        /* Custom styles for the college logo */
        .college-logo {
            max-width: 100px;
        }

        /* Custom styles for college name and tagline */
        .college-name {
            font-size: 24px;
            font-weight: bold;
            color: #FFFFFF; /* Blue color */
        }

        .tagline {
            font-size: 18px;
            color: #fff; /* White text color */
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <!-- College Logo -->
                <img src="~/Resources/uc-college-aluva-mobile-logo (1).png" alt="College Logo" class="college-logo">

                <!-- College Name and Tagline -->
                <div class="college-name">Master of Computer Applications</div>
                <div class="tagline">Union Christian College, Aluva</div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h2 class="my-4">Modify Requested Leave</h2>

        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Leave Request ID</th>
                        <th>Leave Type</th>
                        <th>From Date</th>
                        <th>To Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leaveRequest in Model)
                    {
                        <tr>
                            <td>@leaveRequest.Id</td>
                            <td>@leaveRequest.Type</td>
                            <td>@leaveRequest.FromDate.ToShortDateString()</td>
                            <td>@leaveRequest.ToDate.ToShortDateString()</td>
                            <td>@leaveRequest.Status</td>
                            <td>
                                @Html.ActionLink("Modify", "Modify" + leaveRequest.Type.Replace(" ", ""), new { leaveRequestId = leaveRequest.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No leave requests found.</p>
        }
    </div>

    <footer class="footer">
        <p>Leave Management System &copy; 2023. All rights reserved.</p>
        <p>Contact: office@mcaucc.edu.in | Phone: +91-XXXXXXXXXX</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
